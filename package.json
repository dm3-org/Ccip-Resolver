{
    "name": "ccip-resolver",
    "version": "0.2.8",
    "description": "",
    "types": "dist/index.d.ts",
    "scripts": {
        "compile": "hardhat compile",
        "test:contracts": "hardhat test ./test/contracts/**",
        "test:gateway": "hardhat test ./test/gateway/**",
        "test:e2e-setup": "npx hardhat run ./scripts/setupEnvironment.ts",
        "test:e2e": "hardhat test ./test/e2e/** ",
        "test": "yarn run test:contracts && yarn run test:gateway ",
        "lint:fix": "prettier --write 'scripts/**/*.{js,ts}' 'test/**/*.{js,ts}' 'deploy/**/*.{js,ts}'  && tslint --fix --config tslint.json --project tsconfig.json && solhint contracts/**/*.sol",
        "lint": "tslint --config tslint.json --project tsconfig.json && solhint contracts/**/*.sol",
        "format": "prettier --check \"**/*.{ts,js,sol}\"",
        "format:fix": "prettier --write \"**/*.{ts,js,sol}\"",
        "deploy:bedrock-proof-verifier-goerli": "npx hardhat run ./deploy/01_BedrockProofVerifier.ts --network goerli",
        "deploy:bedrock-proof-verifier-mainnet": "npx hardhat run ./deploy/01_BedrockProofVerifier.ts --network mainnet",
        "deploy:ccip-resolver-goerli": "npx hardhat run ./deploy/02_ERC3668Resolver.ts --network goerli",
        "deploy:ccip-resolver-mainnet": "npx hardhat run ./deploy/02_ERC3668Resolver.ts --network mainnet",
        "docker:build": "docker build -t ccip-resolver -f ./Dockerfile .",
        "build": "yarn hardhat compile && yarn tsc -p tsconfig-build.json",
        "start": "node dist/gateway/index.js"
    },
    "files": [
        "dist",
        "LICENSE",
        "README.md",
        "build",
        "contracts/**/*.sol",
        "abi",
        "artifacts",
        "typechain"
